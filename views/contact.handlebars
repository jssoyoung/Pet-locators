<main class='h-auto py-12'>
  <div
    class='flex flex-col mx-auto w-[100%] sm:w-[80%] md:w-[70%] lg:w-[50%] xl:w-[50%] h-[90vh]'
  >
    <div class='py-12 mx-auto'>
      <img class='w-[70rem]' src='/images/listening.png' />
    </div>
    <div class='flex flex-col justfiy-center xl:flex xl:flex-row items-center'>
      <img class='w-[45rem] h-[30rem]' src='/images/dog-png-9104.png' />
      <form action='/contact' method='POST' class='w-[65rem] max-w-xl mx-auto'>
        <label for='name' class='block mb-2'>Name:</label>
        <input
          type='text'
          id='name'
          name='name'
          required
          class='w-full px-4 py-2 mb-6 rounded-md'
          disabled
        />

        <label for='email' class='block mb-2'>Email:</label>
        <input
          type='email'
          id='email'
          name='email'
          required
          class='w-full px-4 py-2 mb-6 rounded-md'
          disabled
        />

        <label for='message' class='block mb-2'>Message:</label>
        <textarea
          id='message'
          name='message'
          rows='4'
          required
          class='w-full px-4 py-2 mb-6 rounded-md'
          disabled
        ></textarea>

        <button
          type='submit'
          class='bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-md'
          disabled
        >Send</button>
      </form>
    </div>
  </div>
</main>