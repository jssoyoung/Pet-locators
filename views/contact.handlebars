<main class='mx-auto max-w-[50rem] h-[90vh]'>
  <form action='/contact' method='POST' class='max-w-lg mx-auto'>
    <label for='name' class='block mb-2'>Name:</label>
    <input
      type='text'
      id='name'
      name='name'
      required
      class='w-full px-4 py-2 mb-6 rounded-md'
    />

    <label for='email' class='block mb-2'>Email:</label>
    <input
      type='email'
      id='email'
      name='email'
      required
      class='w-full px-4 py-2 mb-6 rounded-md'
    />

    <label for='message' class='block mb-2'>Message:</label>
    <textarea
      id='message'
      name='message'
      rows='4'
      required
      class='w-full px-4 py-2 mb-6 rounded-md'
    ></textarea>

    <button
      type='submit'
      class='bg-blue-500 text-white px-6 py-2 rounded-md'
    >Send</button>
  </form>
</main>