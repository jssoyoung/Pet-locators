<main class='h-auto py-2'>
  <div
    class='flex flex-col mx-auto w-[90%] sm:w-[80%] md:w-[70%] lg:w-[50%] xl:w-[50%] h-auto'
  >
    <div class='py-2 sm:py-12 mx-auto'>
      <img class='w-[70rem]' src='/images/listening.png' />
    </div>
    <div class='flex flex-col justify-center xl:flex xl:flex-row items-center'>
      <img
        class='w-[30rem] h-[15rem] sm:w-[45rem] sm:h-[30rem]'
        src='/images/dog-png-9104.png'
      />
      <form action='/contact' method='POST' class='w-[100%] max-w-xl mx-auto'>
        <label for='name' class='block mb-2'>Name:</label>
        <input
          type='text'
          id='name'
          name='name'
          required
          class='w-full px-4 py-2 mb-6 rounded-md'
          readonly
          disabled
          value='{{name}}'
        />

        <label for='email' class='block mb-2'>Email:</label>
        <input
          type='email'
          id='email'
          name='email'
          required
          class='w-full px-4 py-2 mb-6 rounded-md'
          readonly
          disabled
          value='{{email}}'
        />

        <label for='message' class='block mb-2'>Message:</label>
        <textarea
          id='message'
          name='message'
          rows='4'
          required
          class='w-full px-4 py-2 mb-6 rounded-md'
        ></textarea>

        <button
          type='submit'
          class='float-right bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-md'
        >Send</button>
        <span id='message_contact'></span>
      </form>
    </div>
  </div>
</main>