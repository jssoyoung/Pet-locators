<main
  class='flex flex-col justify-center items-center h-auto mx-auto bg-white shadow-lg rounded-md overflow-hidden'
>
  <div
    class="relative w-[100%] h-[30rem] bg-[url('/images/eugene-chystiakov-3HltpNx6ZSA-unsplash.jpg')] bg-cover bg-bottom backdrop-blur-sm"
  >
    <p
      class='absolute right-0 bottom-0 p-12 text-2xl text-white font-extrabold tracking-wide'
    >Photo by Eugene Chystiakov</p>
    <img
      class='absolute inset-x-0 mx-auto min-w-[20] w-[80rem] top-[2.5rem]'
      src='/images/banner.png'
    />
  </div>

  <div class='flex flex-col w-[80vw] mt-12'>
    <div class='flex flex-col gap-6 flex-wrap xl:w-[90%] mx-auto py-12 h-auto'>
      <p class='justify-self-end text-4xl text-black px-6'>Nearby</p>
      <div
        class='flex flex-wrap gap-12 flex-shrink-0 max-h-[60vh] overflow-y-scroll p-12'
      >
        {{#each usersInTheSameCity}}
          <div
            class='relative flex flex-col w-[15rem] max-h-[15rem] bg-white rounded-2xl shadow-2xl'
          >
            <a
              action='/user/{{this.dataValues.id}}'
              href='/user/{{this.dataValues.id}}'
            >
              <img
                src='{{this.dataValues.userPicture}}'
                alt='User Profile Image'
                class='min-w-[15rem] max-w-[15rem] w-[100%] mx-auto rounded-3xl mb-4 brightness-75 hover:brightness-100'
              />
            </a>
            <div class='absolute bottom-0 right-0'>
              <a
                class=''
                action='/user/{{this.dataValues.id}}'
                href='/user/{{this.dataValues.id}}'
              >
                <h3
                  class='px-4 text-2xl text-white font-semibold tracking-wide text-right'
                >{{this.dataValues.user_name}}</h3>
              </a>
              <a
                class='float-right px-2'
                action='/user/{{this.dataValues.id}}'
                href='/user/{{this.dataValues.id}}'
              >
                <h4
                  class='p-2 text-white text-xl font-semibold tracking-wide text-right'
                >{{this.dataValues.city}}, {{this.dataValues.state}}</h4>
              </a>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class='flex flex-col w-[80vw] h-auto mt-12'>
    <div class='flex flex-col gap-6 flex-wrap xl:w-[90%] mx-auto py-12 h-auto'>
      <p class='justify-self-end text-4xl text-black px-6'>Trending
        <img class='inline w-4' src='/images/heart.svg' alt='Heart' /></p>
      <div
        class='flex flex-wrap gap-12 flex-shrink-0 max-h-[60vh] overflow-y-scroll p-12'
      >
        {{#each trendingPictures}}
          <a
            action='/pets/{{this.pet_id}}/{{this.picture_id}}'
            href='/pets/{{this.pet_id}}/{{this.picture_id}}'
          >
            <div
              class='rounded-md mx-auto rounded-2xl shadow-2xl mb-4 w-[27.5rem] h-[27.5rem] bg-cover bg-center bg-no-repeat brightness-90 hover:brightness-105'
              style="background-image: url('{{this.pictureUrl}}');"
            ></div>
          </a>
        {{/each}}
      </div>
    </div>
  </div>
</main>